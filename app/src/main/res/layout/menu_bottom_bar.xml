<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:weightSum="2"
        android:background="@color/white">
        
        <LinearLayout
            android:id="@+id/menu_home"
            style="@style/BottomBarItem">

            <ImageView
                android:id="@+id/menu_home_icon"
                style="@style/BottomBarIcon"
                android:src="@drawable/ic_home_filled"/>

            <TextView
                android:id="@+id/menu_home_title"
                style="@style/BottomBarText"
                android:text="@string/home"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_favorites"
            style="@style/BottomBarItem">

            <ImageView
                android:id="@+id/menu_favorites_icon"
                style="@style/BottomBarIcon"
                android:src="@drawable/ic_star_filled"/>

            <TextView
                android:id="@+id/menu_favorites_title"
                style="@style/BottomBarText"
                android:text="@string/favorites"/>

        </LinearLayout>
        
    </LinearLayout>
    
</layout>